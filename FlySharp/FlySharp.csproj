<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>

    <!-- metadata of package -->
    <PackageId>FlySharp</PackageId>
    <Version>1.0.3</Version>
    <Authors>Yekuuun</Authors>
    <Company>Yekuuun</Company>
    <Description>A basic SDK for the FlySip XML RPC.</Description>
    <RepositoryUrl>https://github.com/belgium-provider/FlySharp</RepositoryUrl>
    <PackageProjectUrl>https://github.com/belgium-provider/FlySharp</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageOutputPath>./artifacts</PackageOutputPath>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.4" />
  </ItemGroup>
  <ItemGroup>
    <None Include="../README.md" Pack="true" PackagePath="" />
  </ItemGroup>

</Project>
